{
  "name": "clos-core-api",
  "version": "1.0.0",
  "description": "Production-ready CLOS Core API service with GraphQL, real-time updates, and stage gate automation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && copyfiles -u 1 src/**/*.graphql dist/",
    "start": "node dist/index.js",
    "dev": "nodemon --exec tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "docker:build": "docker build -t clos-core-api .",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "typecheck": "tsc --noEmit",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@apollo/server-plugin-landing-page-local-default": "^4.0.0",
    "@apollo/server-plugin-landing-page-graphql-playground": "^4.0.0",
    "@apollo/subgraph": "^2.7.8",
    "@aws-sdk/client-dynamodb": "^3.600.0",
    "@aws-sdk/client-eventbridge": "^3.600.0",
    "@aws-sdk/client-s3": "^3.600.0",
    "@aws-sdk/client-secrets-manager": "^3.600.0",
    "@aws-sdk/lib-dynamodb": "^3.600.0",
    "@graphql-tools/schema": "^10.0.4",
    "@prisma/client": "^5.17.0",
    "apollo-server-express": "^3.12.1",
    "auth0": "^4.7.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dataloader": "^2.2.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "graphql": "^16.9.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-query-complexity": "^0.12.0",
    "graphql-redis-subscriptions": "^2.6.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-upload": "^16.0.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "jwks-client": "^3.0.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "pino": "^9.3.2",
    "pino-http": "^10.2.0",
    "pino-pretty": "^11.2.2",
    "redis": "^4.7.0",
    "socket.io": "^4.7.5",
    "ws": "^8.18.0",
    "yup": "^1.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/graphql-upload": "^16.0.7",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.1.0",
    "@types/nodemailer": "^6.4.15",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prisma": "^5.17.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/candlefish-ai/candlefish-operating-system.git"
  },
  "keywords": [
    "clos",
    "graphql",
    "api",
    "stage-gates",
    "portfolio-management",
    "real-time",
    "microservices"
  ],
  "author": "Candlefish AI <engineering@candlefish.ai>",
  "license": "PROPRIETARY",
  "private": true
}