# Database
DATABASE_URL=postgresql://clos_user:clos_password@localhost:5432/clos_db

# Redis (for caching and pub/sub)
REDIS_URL=redis://localhost:6379

# Authentication (Auth0)
AUTH0_DOMAIN=candlefish.auth0.com
AUTH0_AUDIENCE=https://api.candlefish.ai
AUTH0_ISSUER=https://candlefish.auth0.com/
AUTH0_JWKS_URI=https://candlefish.auth0.com/.well-known/jwks.json

# AWS Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
EVENTBRIDGE_BUS_NAME=clos-events
EVENTBRIDGE_SOURCE=clos.core-api

# Server Configuration
NODE_ENV=development
PORT=4000
WS_PORT=4001
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Feature Flags
ALLOW_ANONYMOUS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Query Limits
MAX_QUERY_SIZE=10000
QUERY_DEPTH_LIMIT=10
QUERY_COMPLEXITY_LIMIT=1000

# Health Check
HEALTH_CHECK_INTERVAL=30000